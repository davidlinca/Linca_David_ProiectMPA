@model Linca_David_ProiectMPA.Models.TypePredictionViewModel

@{
    ViewData["Title"] = "Type Prediction";
}

<h2>Type Prediction</h2>

<form asp-action="Index" method="post">
    <div class="form-group mb-2">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Director" class="form-label"></label>
        <input asp-for="Director" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Cast" class="form-label"></label>
        <input asp-for="Cast" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Duration" class="form-label"></label>
        <input asp-for="Duration" class="form-control" />
        <small class="form-text text-muted">Ex: "90 min", "5 Seasons"</small>
    </div>

    <button type="submit" class="btn btn-primary">Predict</button>
</form>

@if (Model != null)
{
    <hr />
    <h3>Predicted type: @(Model.PredictedType ?? "no prediction")</h3>
}